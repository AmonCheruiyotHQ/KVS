    <script>
        function downloadExcel() {
            // Create CSV content
            let csv = '\ufeff'; // UTF-8 BOM
            
            // Title and metadata
            csv += 'KiliVelocity EA - Price Change Scoring System\n';
            csv += 'Generated: ' + new Date().toLocaleString() + '\n\n';
            
            // Section 1: Formula
            csv += 'FORMULA BREAKDOWN\n';
            csv += 'Component,Formula,Example\n';
            csv += 'Price Change %,"(Actual Movement / TriggerPips) × 100","(115 / 120) × 100 = 95.8%"\n';
            csv += 'Actual Movement,Latest Price - Oldest Price,1.08615 - 1.08500 = 115 pips\n';
            csv += 'TriggerPips,EA Setting,120 pips (user configured)\n\n';
            
            // Section 2: Scoring Table
            csv += 'SCORING THRESHOLDS\n';
            csv += 'Price Change %,Score,Quality,Description\n';
            csv += '≥ 95%,5,Excellent,Strong momentum - high-quality setup\n';
            csv += '85% - 94%,4,Good,Good momentum - acceptable setup\n';
            csv += '75% - 84%,3,Fair,Moderate momentum - marginal setup\n';
            csv += '< 75%,0,Poor,Weak momentum - rejected trade\n\n';
            
            // Section 3: Real Examples
            csv += 'REAL TRADING EXAMPLES (TriggerPips = 120)\n';
            csv += 'Scenario,Start Price,End Price,Movement (pips),Percentage,Score,Decision\n';
            csv += 'Strong Bullish,1.08500,1.08620,120,100.0%,5,ENTER BUY\n';
            csv += 'Good Momentum,1.08500,1.08610,110,91.7%,4,ENTER BUY\n';
            csv += 'Moderate Move,1.08500,1.08595,95,79.2%,3,MARGINAL\n';
            csv += 'Weak Move,1.08500,1.08575,75,62.5%,0,NO TRADE\n';
            csv += 'Strong Bearish,1.08620,1.08500,120,100.0%,5,ENTER SELL\n';
            csv += 'Ranging Market,1.08500,1.08530,30,25.0%,0,NO TRADE\n';
            csv += 'Perfect Trigger,1.08500,1.08614,114,95.0%,5,ENTER BUY\n';
            csv += 'Just Below,1.08500,1.08612,112,93.3%,4,ENTER BUY\n\n';
            
            // Section 4: Interactive Calculator
            csv += 'INTERACTIVE CALCULATOR\n';
            csv += 'Input Your Values:,Value,Formula Result\n';
            csv += 'TriggerPips Setting,120,\n';
            csv += 'Actual Movement (pips),115,"=(115/120)*100"\n';
            csv += 'Percentage,95.8%,"IF percentage >=95, THEN 5, IF >=85, THEN 4, IF >=75, THEN 3, ELSE 0"\n';
            csv += 'Final Score,5,\n\n';
            
            // Section 5: Different TriggerPips Settings
            csv += 'EXAMPLES WITH DIFFERENT TRIGGERPIPS SETTINGS\n';
            csv += 'TriggerPips,Actual Movement,Percentage,Score,Notes\n';
            csv += '100,95,95.0%,5,"Conservative threshold - easier to achieve"\n';
            csv += '120,115,95.8%,5,"Standard setting - balanced"\n';
            csv += '150,145,96.7%,5,"Aggressive threshold - harder to achieve"\n';
            csv += '200,170,85.0%,4,"Very aggressive - requires big moves"\n\n';
            
            // Section 6: How Score Affects Trading
            csv += 'HOW SCORE AFFECTS YOUR TRADING\n';
            csv += 'Scenario,Price Change Score,Other Criteria Avg,Total Score,MinTradeScore,Result\n';
            csv += 'Perfect Setup,5,5,5.0,4.0,✅ TRADE ALLOWED\n';
            csv += 'Strong Setup,5,4,4.5,4.0,✅ TRADE ALLOWED\n';
            csv += 'Marginal Setup,3,4.5,3.75,4.0,❌ TRADE REJECTED\n';
            csv += 'Weak Setup,0,5,2.5,4.0,❌ TRADE REJECTED\n';
            csv += 'All Weak,3,3,3.0,4.0,❌ TRADE REJECTED\n\n';
            
            // Section 7: Step by Step Example
            csv += 'STEP-BY-STEP CALCULATION EXAMPLE\n';
            csv += 'Step,Description,Value\n';
            csv += '1,EA stores prices in buffer,Every 1 minute for 120 seconds\n';
            csv += '2,Oldest price (2 min ago),1.08500\n';
            csv += '3,Latest price (now),1.08615\n';
            csv += '4,Calculate movement,1.08615 - 1.08500 = 0.00115\n';
            csv += '5,Convert to pips,0.00115 / 0.00001 = 115 pips\n';
            csv += '6,Your TriggerPips setting,120 pips\n';
            csv += '7,Calculate percentage,(115 / 120) × 100 = 95.8%\n';
            csv += '8,Check threshold,95.8% ≥ 95% threshold\n';
            csv += '9,Assign score,5 (Excellent)\n\n';
            
            // Section 8: Code Reference
            csv += 'CODE REFERENCE FROM EA\n';
            csv += 'Code Line,MQL5 Code\n';
            csv += 'Calculate percentage,"double priceChangeRatio = pipDiff / triggerPips * 100.0;"\n';
            csv += 'Check ≥95%,"if(priceChangeRatio >= 95.0) return 5;"\n';
            csv += 'Check ≥85%,"else if(priceChangeRatio >= 85.0) return 4;"\n';
            csv += 'Check ≥75%,"else if(priceChangeRatio >= 75.0) return 3;"\n';
            csv += 'Default (weak),"return 0;"\n';
            
            // Create blob and download
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', 'KiliVelocity_PriceChange_Scoring_Examples.csv');
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            alert('✅ Excel file downloaded successfully!\n\nYou can open it in:\n• Microsoft Excel\n• Google Sheets\n• LibreOffice Calc\n\nThe file contains all examples and formulas from this page.');
        }
    </script>
